<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Kaoline Porcelaine
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`#}

		<link rel="stylesheet" href="{{asset('css/styleHeader.css')}}">
		<link rel="stylesheet" href="{{asset('css/styleAccueil.css')}}">
		<link rel="stylesheet" href="{{asset('css/styles.Apropos_final.css')}}">
		<link rel="stylesheet" href="{{asset('css/styleCatalogue.css')}}">
		<link rel="stylesheet" href="{{asset('css/styleCreateProduit.css')}}">
		<link rel="stylesheet" href="{{asset('css/styleFooter.css')}}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">


		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

		<script src="{{asset('js/menuHamburger.js')}}" async></script>
		{# <script src="js/modalProducts.js" async></script> #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<header class="container-fluid justify-content-between mb-3">
				<div class="header row w-75 mx-auto">
					<div class="essay col-12">
						<div class="container">
							<div class="row ms-5 mx-auto d-flex flex-column justify-content-center flex-md-row d-lg-flex">
								<div class="logo col-4 mt-4 mx-auto">
									<a href="{{ path('home') }}"><img src="{{asset('img/logoKaoline.png')}}" alt="logoKoaline"></a>
								</div>
								<div class="col-4 mt-4 ps-lg-0 mx-auto">
									<h1>Kaoline Porcelaine</h1>
								</div>

								<div class="panier col-4 mt-4 d-flex d-inline  mx-auto">
									<a href="{{ path('cart_index') }}" class="bi-cart4 fs-1 p-1" role="button"></a>
									{# <p class="nb-panier">0</p> #}
									<div class="compte d-flex">
										<a href="{{ path('app_register') }}" class="ms-2 mb-2 bi-person-circle fs-1" role="button"></a>
										{# <p class="connexion d-none d-lg-block m-1">Connexion</p> #}
									</div>
								</div>
							</div>

							<nav
								class="navbar navbar-light d-lg-none">

								<!-- Collapse button -->
								<button class="navbar-toggler first-button text-center mx-auto" id="btnAfficher" type="button" data-target="#navbar" aria-controls="navbarSupportedContent20" aria-expanded="false" aria-label="Toggle navigation">
									<div class="animated-icon1">
										<span class="bi-list fs-1"></span>
									</div>
								</button>
							</nav>

							<div class="row">
								<ul class="menu col-6 text-center d-lg-flex justify-content-around mx-auto cache" id="navbar">
									<li>
										<a href="{{ path('apropos') }}">A propos</a>
									</li>
									<li>
										<a href="{{ path('catalogue') }}">Catalogue</a>
									</li>
									<li>
										<a href="{{ path('contact') }}">Contact</a>
									</li>
								</ul>
							</div>

						</div>
					</div>
				</div>
			</header>
		{% endblock %}


		{% block main %}{% endblock %}


		{% block footer %}
			<footer>
				<div class="container">
					<div class="row w-75 mx-auto text-center">
						<figure class="logo col-lg-3 mt-5">
							<a href="{{ path('home') }}"><img src="{{asset('img/logoKaoline.png')}}" alt="Logo"></a>
						</figure>
						<div class="info col-lg-3 mt-2">
							<h3>Information</h3>
							<ul class="text-center">
								<li>
									<a href="{{path('apropos')}}#Conseils">Conseil d'entretien</a>
								</li>
								<li>
									<a href="{{ path("mention") }}">Mention légales</a>
								</li>
								{# <li>
																																																																																																	<a href="#">Confidentialités</a>
																																																																																																</li> #}
							</ul>
						</div>
						<div class="Réalisation col-lg-3 mt-2">
							<h3>Mes réalisation</h3>
							<a class="text-decoration-none text-dark" href="{{path('catalogue')}}">Catalogue</a>
						</div>
						<div class="Réalisation col-lg-3 mt-2">
							<h3>Vous pouvez me suivre</h3>
							<ul>
								<li><a href="https://www.facebook.com/Kaoline-porcelaine-101323045704234/" class="bi bi-facebook fs-1"></a></li>
							</ul>
						</div>
						<p>&copy; Kaoline Porcelaine 2021</p>
					</div>

				</div>
			</footer>
		{% endblock %}
	</body>
</html>
